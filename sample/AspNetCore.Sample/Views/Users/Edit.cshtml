@model AspNetCore.Sample.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Users";
}
<h2>User Edit</h2>
<hr />
<form asp-controller="Users" asp-action="Save">
    <div class="form-group">
        <label>Username</label>
        <input class="form-control" placeholder="Username" asp-for="Username" />
    </div>
    <div class="form-group">
        <label>Point</label>
        <input class="form-control" placeholder="Point" type="number" asp-for="Point" />
    </div>
    <button class="btn btn-default">Save</button>
</form>