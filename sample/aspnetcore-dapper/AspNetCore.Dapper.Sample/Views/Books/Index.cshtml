@{
    ViewData["Title"] = "Books";
}
<h2>Books</h2>
<hr />
<section>
    <a class="btn btn-default" asp-action="Edit">Create</a>
</section>
<section>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var book in ViewBag.Books)
        {
            <tr>
                <td>@book.Name</td>
                <td>@book.Type</td>
                <td>
                    <a class="btn btn-default btn-sm" asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteCommand" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</section>